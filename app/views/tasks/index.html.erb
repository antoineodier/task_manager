<h1>Welcome to Task Manager</h1>

<% @tasks.each do |task| %>
<h2>Task: <%= task.name %></h2>
<%= link_to "Edit", edit_task_path(task.id) %>
<%= link_to "Delete", task_path(task.id), method: :delete,
  data: { confirm: "Are you sure?" } %>
<% end %>

<h1>
  <%= link_to "Create a task", new_task_path %>
</h1>
